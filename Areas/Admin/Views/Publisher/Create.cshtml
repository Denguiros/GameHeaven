@model GameHeaven.ViewModels.PublisherViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Create Publisher</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CreatePublisher.Name" class="control-label"></label>
                            <input asp-for="CreatePublisher.Name" class="form-control" />
                            <span asp-validation-for="CreatePublisher.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatePublisher.Description" class="control-label"></label>
                            <input asp-for="CreatePublisher.Description" class="form-control" />
                            <span asp-validation-for="CreatePublisher.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatePublisher.Cover" class="control-label"></label>
                            <input asp-for="CreatePublisher.Cover" class="form-control" accept="image/*" />
                            <span asp-validation-for="CreatePublisher.Cover" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatePublisher.WebsiteLink" class="control-label"></label>
                            <input asp-for="CreatePublisher.WebsiteLink" class="form-control" />
                            <span asp-validation-for="CreatePublisher.WebsiteLink" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatePublisher.UserId" class="control-label"></label>
                            <select asp-for="CreatePublisher.UserId" asp-items="Model.Users" class="form-control">
                                <option selected="selected">Select User</option>
                            </select>
                            <span asp-validation-for="CreatePublisher.UserId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatePublisher.FacebookLink" class="control-label"></label>
                            <input asp-for="CreatePublisher.FacebookLink" class="form-control" />
                            <span asp-validation-for="CreatePublisher.FacebookLink" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatePublisher.TwitterLink" class="control-label"></label>
                            <input asp-for="CreatePublisher.TwitterLink" class="form-control" />
                            <span asp-validation-for="CreatePublisher.TwitterLink" class="text-danger"></span>
                        </div>
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");
}
}