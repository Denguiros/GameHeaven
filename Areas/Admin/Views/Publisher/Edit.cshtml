@model GameHeaven.ViewModels.PublisherViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edit Publisher</h6>
        </div>
        <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UpdatePublisher.Name" class="control-label"></label>
                <input asp-for="UpdatePublisher.Name" class="form-control" />
                <span asp-validation-for="UpdatePublisher.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatePublisher.Description" class="control-label"></label>
                <input asp-for="UpdatePublisher.Description" class="form-control" />
                <span asp-validation-for="UpdatePublisher.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatePublisher.Cover" class="control-label"></label>
                <input asp-for="UpdatePublisher.Cover" class="form-control" accept="image/*"/>
                <span asp-validation-for="UpdatePublisher.Cover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatePublisher.WebsiteLink" class="control-label"></label>
                <input asp-for="UpdatePublisher.WebsiteLink" class="form-control" />
                <span asp-validation-for="UpdatePublisher.WebsiteLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatePublisher.UserId" class="control-label"></label>
                <select asp-for="UpdatePublisher.UserId" asp-items="Model.Users" class="form-control" >
                    <option selected="selected">Select User</option>
                    </select>
                <span asp-validation-for="UpdatePublisher.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatePublisher.FacebookLink" class="control-label"></label>
                <input asp-for="UpdatePublisher.FacebookLink" class="form-control" />
                <span asp-validation-for="UpdatePublisher.FacebookLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatePublisher.TwitterLink" class="control-label"></label>
                <input asp-for="UpdatePublisher.TwitterLink" class="form-control" />
                <span asp-validation-for="UpdatePublisher.TwitterLink" class="text-danger"></span>
            </div>
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
             </div>
            </div>
        </div>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

