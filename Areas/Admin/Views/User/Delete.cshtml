@model GameHeaven.Entities.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">User Details</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.UserProperties.Id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UserProperties.Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.UserProperties.UserName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UserProperties.UserName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.UserProperties.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UserProperties.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.UserProperties.EmailConfirmed)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UserProperties.EmailConfirmed)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Publisher)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Publisher.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Developer)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Developer.Name)
                        </dd>
                    </dl>
                </div>
                <div>
                    @Html.ActionLink("Edit", "Edit", new {  id = Model.UserProperties.Id }) |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

