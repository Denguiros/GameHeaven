@model IEnumerable<GameHeaven.Entities.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Users</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UserProperties.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserProperties.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserProperties.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Publisher)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Developer)
                            </th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UserProperties.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserProperties.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserProperties.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Publisher.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Developer.Name)
                            </th>

                            <th>Actions</th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserProperties.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserProperties.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserProperties.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Publisher.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Developer.Name)
                                </td>

                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="icon icon-sm">
                                                <span class="fas fa-ellipsis-h icon-dark"></span>
                                            </span>
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>

                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item text-black btn-labeled" href="@Url.Action("Details","User",new {id = item.UserProperties.Id})"><span class="btn-label"><i class="fa fa-eye"></i></span> Show</a>
                                            </li>
                                            <li><a class="dropdown-item text-black" href="@Url.Action("Edit","User",new {id = item.UserProperties.Id})"><span class="btn-label"><i class="fa fa-edit"></i></span> Edit</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger" href="@Url.Action("Delete","User",new {id = item.UserProperties.Id})"><span class="btn-label"><i class="fa fa-trash"></i></span> Delete</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
