@model GameHeaven.Dtos.PublisherDtos.UpdatePublisherDto

@{
    ViewData["Title"] = "Edit";
}


<div class="nk-gap-4"></div>

<div class="container">

    <div class="row vertical-gap">

        <div class="col-lg-12">
            <div class="nk-box-3">
                <h2 class="nk-title h3 text-center">Update Publisher Profile</h2>
                <div class="nk-gap-1"></div>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cover" class="control-label"></label>
                        <input asp-for="Cover" class="form-control" accept="image/*" />
                        <span asp-validation-for="Cover" class="text-danger"></span>
                    </div>
                    <div class="row vertical-gap">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WebsiteLink" class="control-label"></label>
                                <input asp-for="WebsiteLink" class="form-control" />
                                <span asp-validation-for="WebsiteLink" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FacebookLink" class="control-label"></label>
                                <input asp-for="FacebookLink" class="form-control" />
                                <span asp-validation-for="FacebookLink" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="TwitterLink" class="control-label"></label>
                                <input asp-for="TwitterLink" class="form-control" />
                                <span asp-validation-for="TwitterLink" class="text-danger"></span>
                            </div>
                        </div>
                    </div>>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


